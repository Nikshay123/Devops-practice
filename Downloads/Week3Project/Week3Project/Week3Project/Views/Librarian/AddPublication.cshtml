@model Week3Project.Models.PublicationModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Publication</title>
</head>
<body>
    <h2>Add Publication</h2>

    @using (Html.BeginForm("AddPublication", "Librarian", FormMethod.Post))
    {
        <div>
            <label for="Title">Enter the Title:</label>
            @Html.EditorFor(model => model.Title)
            <span class="text-danger">@Html.ValidationMessageFor(model => model.Title)</span>
        </div>

        <div>
            <label for="Author">Enter the Author:</label>
            @Html.EditorFor(model => model.Author)
            <span class="text-danger">@Html.ValidationMessageFor(model => model.Author)</span>
        </div>

        <div>
            <label for="selectedBranch">Select the Branch:</label>
            @Html.DropDownList("selectedBranch", new SelectList(ViewBag.Branches, "Name", "Name"))
        </div>

        <div>
            <input type="submit" value="Add Publication" />
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <p class="text-danger">@TempData["ErrorMessage"]</p>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <p class="text-success">@TempData["SuccessMessage"]</p>
    }

    <div>
        <button type="button" onclick="window.location.href='@Url.Action("DashBoard", "Librarian")'">Go to Dashboard</button>
        <button type="button" onclick="window.location.href='@Url.Action("Index", "Librarian")'">Main Menu</button>
    </div>

</body>
</html>
